  box-sizing: border-box;
  align-items: center;
  box-shadow: 0 0 10rpx #585858;
}
.body_hint {
  width: 500rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin: 0 auto;
  background-color: #FFF7E2;
  text-align: center;
  margin-top: 50rpx;
}
.progress_bar {
  width: 450rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}
.progress_bar_image {
  width: 500rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  position: relative;
  top: -40rpx;
}
.progress_bar_image_items {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.progress_bar_image_item {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 15rpx;
}
.return {
  width: 750rpx;
  display: flex;
