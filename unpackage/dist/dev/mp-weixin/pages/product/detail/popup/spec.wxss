.product-popup .popup-bg {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99;
}
.product-popup .main {
  position: fixed;
  width: 100%;
  bottom: 0;
  background-color: #fff;
  -webkit-transform: translate3d(0, 980rpx, 0);
          transform: translate3d(0, 980rpx, 0);
  transition: -webkit-transform 0.2s cubic-bezier(0, 0, 0.25, 1);
  transition: transform 0.2s cubic-bezier(0, 0, 0.25, 1);
  transition: transform 0.2s cubic-bezier(0, 0, 0.25, 1), -webkit-transform 0.2s cubic-bezier(0, 0, 0.25, 1);
  box-sizing: border-box;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 99;
  border-radius: 12rpx;
}
.product-popup.open .main {
  -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
  z-index: 99;
}
.product-popup.close .popup-bg {
  display: none;
}
.product-popup.close .main {
  display: none;
  z-index: -1;
}
.product-popup .header {
  height: 200rpx;
