
.rule-detail-wrap {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	width: 100%;
	z-index: 999;
}
.rule-detail-wrap .rule-bg {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: rgb(0, 0, 0);
	opacity: 0;
	transition: all 0.3s ease-out;
}
.rule-detail-wrap .rule-bg.active {
	opacity: 0.8;
}
.rule-detail-wrap .rule-content {
	position: absolute;
	top: 20vh;
	left: 0;
	right: 0;
	margin: auto;
	width: 80%;
	background-color: #fff;
	border-radius: 12rpx;
	transition: all 0.3s ease-out;
	box-sizing: border-box;
	white-space: pre-wrap;
}
.rule-detail-wrap .rule-content .title {
	height: 100rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 32rpx;
	position: relative;
	color: #333;
	box-sizing: border-box;
}
.rule-detail-wrap .rule-content .iconfont {
	position: absolute;
	right: 20rpx;
	top: 20rpx;
	font-size: 32rpx;
	color: #999999;
}
.rule-detail-wrap .rule-content .content {
	padding: 30rpx;
	max-height: 60vh;
	font-size: 28rpx;
	line-height: 150%;
	overflow-y: auto;
	box-sizing: border-box;
}

