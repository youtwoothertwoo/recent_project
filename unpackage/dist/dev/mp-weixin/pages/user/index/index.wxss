}
.user-header {
  position: relative;
}
[data-theme='theme0'] .user-header {
  background-color: #ff5704 !important;
}
[data-theme='theme1'] .user-header {
  background-color: #19ad57 !important;
}
[data-theme='theme2'] .user-header {
  background-color: #ffcc00 !important;
}
[data-theme='theme3'] .user-header {
  background-color: #33a7ff !important;
}
[data-theme='theme4'] .user-header {
  background-color: #e4e4e4 !important;
}
[data-theme='theme5'] .user-header {
  background-color: #c8ba97 !important;
}
[data-theme='theme6'] .user-header {
