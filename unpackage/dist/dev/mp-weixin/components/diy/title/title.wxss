
.diy-notice {
	display: flex;
	justify-content: center;
	align-items: center;
}
.diy-notice .notice-icon {
	width: 26px;
	height: 26px;
	background-color: #FFFFFF;
	padding: 0 10rpx;
	z-index: 1;
}
.diy-notice .notice-icon image {
	width: 100%;
	height: 100%;
}
.diy-notice .notice-text {
	overflow: hidden;
	white-space: nowrap;
	background-color: #FFFFFF;
	padding: 0 10rpx;
	z-index: 1;
}
.center-line{
	width: 490rpx;
	height: 2rpx;
	background-color: #c7c7c7;
	border-radius: 2rpx;
	position: absolute;
	left: 0;
	bottom: 0;
	top: 0;
	right: 0;
	margin: auto;
	z-index: 0;
}

